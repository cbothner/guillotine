<section class="search">
  <%= form_tag({:controller => :pledgers, :action => "search"}, :id => "searchForm", :method => "get", :remote => true ) do %>
    <%= instructions_for_operators{"Hello and thank you for calling WCBN!"} %>
    <%= instructions_for_operators{"My name is #{current_user.username.split(" ")[0]}; may I take your pledge?"} %>
    <%= label_tag(:namesearch, "Search by first or last name:") %>
    <br> 
    <%= text_field_tag(:namesearch, '', autofocus: "autofocus") %>
    <%= hidden_field_tag(:pledgerid) %>
<%- end %>


<%= yield %>

<%= parent_layout 'application' %>
