-title "Users"
-if user_is_dd?
  %br
  %h2 DD Information
  %section.grid_6.setting
  %b.labelB Name
  First and Last
  %p.inputP=best_in_place @dd_name, :value
  %b.labelB Phone Number
  (123) 456-7890
  %p.inputP=best_in_place @dd_phone, :value, :type=>'tel'

  %br
  = link_to "New User", new_user_path
  %h2 Users
  -@users.each do |user|
    .flexcontainer
      -if user.username != 'dd'
        .flex1.deleteDonationLink= link_to '[X]', {:action=>'destroy', :id=>user}, :confirm=>"Are you sure you want to delete this user?", :method=>:delete
      -else
        .flex1.deleteDonationLink
      .flex3=user.username
      .flex6=user.email

-else
  %h2 Only DD can see this page.

- content_for(:back) { root_path }
