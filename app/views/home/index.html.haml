.flexcontainer
  - if user_is_dd?
    %section.home.flex1
      %h2 Information
      %ul
        %li= link_to "Progress", :donations
        %li= link_to "Underwriting", controller: 'donations', action: 'underwriting'
        %li= link_to "Comments", :comments
        %li= link_to "Premia Shipments", :rewards
        %li= link_to "Tax on Credit Card Donations", :controller => "gpo", :action => "creditcards"
        %li= link_to "Users", :users
  -else
    %section.flex1
  %section.home{:class => user_is_dd? ? "flex1" : "flex3"}
    %h2 Management
    %ul
      %li= link_to "Pledger Search", :pledgers
      - if user_is_dd?
        %li= link_to "Premia Inventory", :items
        %li= link_to "Shows", :shows
        %li= link_to "Show Schedule", :slots
        %li= link_to "Semesters", :semesters
      - else
        %li= link_to "Progress", :donations
        %li= link_to "Leaderboard", :shows
        %li= link_to "Show Schedule", :slots
        %li= link_to "Listener Comments", :comments
        %li= link_to "Inventory", :items
  -if user_is_dd?
    %section.home.flex1
      %h2 Documents
      %ul
        %li
          = link_to semester_pledges_path(Semester.current_semester) do
            Pledge and Benefit Totals
        %li= link_to "All Unsent GPOs", :controller => "gpo"
  -else
    %section.flex1
